{
  "version": 1,
  "disable_existing_loggers": false,
  "loggers": {
    "app": {
      "handlers": ["mail_admins", "console"],
      "level": "INFO"
    },
    "django.request": {
      "handlers": ["mail_admins"],
      "level": "ERROR"
    },
    "django": {
      "handlers": ["console"],
      "level": "INFO"
    }
  },
  "handlers": {
    "mail_admins": {
      "level": "ERROR",
      "class": "django.utils.log.AdminEmailHandler",
      "include_html": true
    },
    "console": {
      "level": "DEBUG",
      "class": "logging.StreamHandler"
    }
  }
}
